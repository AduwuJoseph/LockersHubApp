@model IEnumerable<LockerVM>
@{
    int sn = 1;
    ViewData["TCount"] = Model.Count();
}

<div class="table-responsive">
    <table id="datatable-buttons" class="display table table-striped table-hover">            
        <tbody>

            @if(Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">@sn</td>
                        <td class="text-center">@item.StateName (@item.CityName) - @item.Name</td>
                        <td class="text-center">@item.Size</td>
                        <td class="text-center">@item.QuantityAvailable Available</td>
                        <td class="text-center bg-light">
                            <a asp-action="RentNow" asp-controller="Locker" title="Rent Now" class="btn btn-success btn-rounded btn-xs">
                                Rent Now
                            </a>
                        </td>
                    </tr>
                    sn++;
                }
            }
            else{
                <tr>
                    <td class="text-center text-danger" colspan="5">No record found!</td>
                </tr>
            }
        </tbody>
    </table>
</div>